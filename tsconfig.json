{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "sourceMap": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "out",
    "coverage"
  ]
}